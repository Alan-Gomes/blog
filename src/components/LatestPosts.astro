---
import { CollectionEntry } from 'astro:content';
import Card from './Card.astro';
import Section from './Section.astro';

interface Props {
	posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

<Section>
	<div class="flex justify-between pb-4">
		<p class="text-xl font-bold">Últimas publicações</p>
		<a href="/posts" class="underline hover:text-orange-600">ver todas →</a>
	</div>
	<div class="flex flex-col pb-4 md:flex-row">
		{
			posts.map((post) => (
				<div class="mb-4 basis-1 last:mr-0 md:mr-4 md:basis-1/3">
					<Card post={post} />
				</div>
			))
		}
	</div>
</Section>
